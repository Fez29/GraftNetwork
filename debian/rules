#!/usr/bin/make -f

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- -DARCH=westmere -DSTATIC=OFF -DUSE_LTO=ON -DBUILD_SHARED_LIBS=ON \
		-DDISABLE_SUPERNODE=ON -DCMAKE_INSTALL_RPATH=/usr/lib/$(DEB_HOST_MULTIARCH)/graft.stable \
		-DDEBIAN_VERSION_SUFFIX=$(shell dpkg-parsechangelog -SVersion | sed -e 's/[^-]*-//')-graft.community

override_dh_shlibdeps:
	dh_shlibdeps -l/usr/lib/$(DEB_HOST_MULTIARCH)/graft.stable

override_dh_strip:
	dh_strip --no-ddebs
